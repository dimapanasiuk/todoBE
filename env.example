# Режим работы приложения
NODE_ENV=development

# Настройки базы данных
# ВАРИАНТ 1: Локальная база данных (Docker)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=todo
# DB_USER=postgres
# DB_PASSWORD=0000

# ВАРИАНТ 2: База данных render.com для локальной разработки
# (раскомментируйте и замените на ваши значения из render.com)
DB_HOST=your-render-db-host
DB_PORT=5432
DB_NAME=todo
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_SSL=true

# ВАРИАНТ 3: Полная строка подключения (альтернативный способ)
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT настройки
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here

# Настройки сервера
PORT=5000

# CORS настройки
CORS_ORIGIN=http://localhost:3001
